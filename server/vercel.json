{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/(.*)",
      "dest": "/auth/$1"
    },
    {
      "src": "/api/products/(.*)",
      "dest": "/product/$1"
    },
    {
      "src": "/api/cart/(.*)",
      "dest": "/cart/$1"
    },
    {
      "src": "/api/orders/(.*)",
      "dest": "/order/$1"
    },
    {
      "src": "/api/anime/(.*)",
      "dest": "/anime/$1"
    }
  ]
}
